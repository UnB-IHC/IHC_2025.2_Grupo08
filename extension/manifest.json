{
  "manifest_version": 3,
  "name": "Verificador de acessibilidade",
  "version": "0.1",
  "description": "Verifica crit√©rios de acessibilidade no site atual.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": [
      "content/axe.min.js",
      "content/axe.config.js",
      "content/pt_BR.js",
      "content/translator.js",
      "content/content.js"
    ],
    "run_at": "document_idle"
  }
],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "partials/*.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
